# NWU Protocol Environment Variables
# Copy this file to .env and fill in your values

# Database
MONGODB_URI=mongodb://admin:rocket69!@mongodb:27017/nwu_db?authSource=admin
DATABASE_URL=postgresql://nwu_user:rocket69!@postgres:5432/nwu_db

# Redis
REDIS_URL=redis://redis:6379

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# IPFS
IPFS_HOST=ipfs
IPFS_PORT=5001
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://gateway.ipfs.io

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Keys
OPENAI_API_KEY=sk-
ANTHROPIC_API_KEY=

# Blockchain
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=
CONTRACT_ADDRESS=

# Backend URL (for agents)
BACKEND_URL=http://backend:8000

# Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true

# Ports
API_PORT=8000
DASHBOARD_PORT=3000


# Payment Integration (Stripe)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Subscription Tiers Rate Limits (requests per day)
SUBSCRIPTION_TIER_FREE_RATE_LIMIT=100
SUBSCRIPTION_TIER_PRO_RATE_LIMIT=10000
SUBSCRIPTION_TIER_ENTERPRISE_RATE_LIMIT=100000
