# =============================================================================
# NWU PROTOCOL - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=8000
API_VERSION=v1

# -----------------------------------------------------------------------------
# DATABASE - MongoDB
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/nwu-protocol
MONGODB_DB_NAME=nwu-protocol
MONGODB_USER=nwu_admin
MONGODB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# CACHE - Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# -----------------------------------------------------------------------------
# MESSAGE QUEUE - RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Names
QUEUE_CONTRIBUTIONS=nwu.contributions
QUEUE_VERIFICATIONS=nwu.verifications
QUEUE_REWARDS=nwu.rewards

# -----------------------------------------------------------------------------
# IPFS - Decentralized Storage
# -----------------------------------------------------------------------------
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your_infura_project_id
IPFS_API_SECRET=your_infura_project_secret
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Alternative: Local IPFS node
# IPFS_API_URL=http://localhost:5001
# IPFS_GATEWAY_URL=http://localhost:8080/ipfs/

# -----------------------------------------------------------------------------
# AI - OpenAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# -----------------------------------------------------------------------------
# BLOCKCHAIN - Ethereum
# -----------------------------------------------------------------------------
# Network Configuration
ETH_NETWORK=sepolia
ETH_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# For local development (Hardhat)
# ETH_NETWORK=localhost
# ETH_RPC_URL=http://localhost:8545

# Contract Addresses (update after deployment)
CONTRACT_NWU_TOKEN=0x0000000000000000000000000000000000000000
CONTRACT_VERIFICATION_REGISTRY=0x0000000000000000000000000000000000000000
CONTRACT_REWARD_DISTRIBUTOR=0x0000000000000000000000000000000000000000

# Private Key (for backend services only - NEVER expose publicly!)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_min_32_characters
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=7d

# Session Secret
SESSION_SECRET=your_session_secret_key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://nwu-protocol.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# FRONTEND - Next.js
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_ETHERSCAN_URL=https://sepolia.etherscan.io

# Web3 Configuration
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_CHAIN_NAME=Sepolia

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Log Level: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
METRICS_PORT=9090
METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# AGENT CONFIGURATION
# -----------------------------------------------------------------------------
# Agent-Alpha Settings
AGENT_ALPHA_ENABLED=true
AGENT_ALPHA_CONCURRENCY=5
AGENT_ALPHA_TIMEOUT=30000

# Verification Thresholds
VERIFICATION_MIN_SCORE=0.7
VERIFICATION_CONSENSUS_THRESHOLD=0.75

# -----------------------------------------------------------------------------
# FILE UPLOAD
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.js,.ts,.py,.sol,.md,.json,.csv,.txt
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# REWARDS
# -----------------------------------------------------------------------------
REWARD_BASE_VALUE=10
REWARD_QUALITY_MULTIPLIER=1.5
REWARD_COMPLEXITY_MULTIPLIER=2.0
REWARD_REPUTATION_BONUS=1.2

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG=nwu:*

# Hot reload
WATCH_FILES=true

# -----------------------------------------------------------------------------
# PRODUCTION OVERRIDES
# -----------------------------------------------------------------------------
# Uncomment and set these for production deployment

# NODE_ENV=production
# LOG_LEVEL=warn
# METRICS_ENABLED=true
# ETH_NETWORK=mainnet
# ETH_RPC_URL=https://mainnet.infura.io/v3/your_project_id

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Notes:
# 1. Keep this file updated as new configuration options are added
# 2. Never commit sensitive credentials to version control
# 3. Use strong, unique passwords for production
# 4. Rotate API keys regularly
# 5. Enable 2FA on all external services