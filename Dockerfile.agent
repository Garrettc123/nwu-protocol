FROM python:3.14-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy agent requirements and install Python dependencies
COPY agent-alpha/requirements.txt ./agent-alpha/requirements.txt
RUN pip install --no-cache-dir -r agent-alpha/requirements.txt

# Copy agent code
COPY agent-alpha/ ./agent-alpha/

# Create logs directory
RUN mkdir -p /app/logs

# Run the agent
CMD ["python", "-m", "agent-alpha.app.main"]
