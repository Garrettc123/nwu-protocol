# Production Environment Variables
# Copy this to .env for production deployment
# NEVER commit this file with real values to git

# CRITICAL: Change all passwords and secrets in production!

# PostgreSQL Database
POSTGRES_USER=nwu_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
POSTGRES_DB=nwu_db

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_456!

# Redis
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_789!

# RabbitMQ
RABBITMQ_USER=nwu_admin
RABBITMQ_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_ABC!

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHARACTER_HEX_STRING

# OpenAI API Key (Required for AI verification)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Blockchain Configuration (for smart contract deployment)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your-private-key-for-contract-deployment

# Application
ENVIRONMENT=production
DEBUG=false
